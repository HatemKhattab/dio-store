<!DOCTYPE html>
<html>
<head>
  <title>DioStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav id="nav">
  <div id="page_nav">
		<%= link_to "Home", root_path%> 
		<%= link_to "Shop", products_path%>
		<%= link_to "About", page_about_path%> 
		<%= link_to "FAQs", page_faqs_path%> 
		<%= link_to "Gallery", page_gallery_path%> 
		<%= link_to "Contact", page_contact_path%> 
  </div>

  <div id="sign_in">
		<%if user_signed_in? %>
		 <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete%>
		<%else%>
		  <%= link_to "Sign In", new_user_session_path %>
		  <%= link_to "Sign Up", new_user_registration_path %>
		<%end%>
  </div>
</nav>

<div id="main_wrap" class="container">
  <%flash.each do |name, msg|%>
  <%=content_tag :div, msg, class: "alert-danger"%>
  <%end%>

  <%= yield %>
</div>

<footer>
	<span> <%=Time.zone.now.year%> All rights are reserverd </span>
</footer>

</body>
</html>